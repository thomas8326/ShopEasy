<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="270"
                android:centerX="50%"
                android:centerColor="#77dcf2"
                android:startColor="#52c0f5"
                android:endColor="#1d9cf1"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#1cf1e2"
                />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="270"
                android:centerX="50%"
                android:centerColor="#2f5760"
                android:startColor="#225066"
                android:endColor="#0b3e60"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#094d48"
                />
        </shape>

    </item>
</selector>