<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners
        android:radius="20dp"
        />
    <gradient
        android:angle="270"
        android:centerX="50%"
        android:centerColor="#E4A45C"
        android:startColor="#FFD788"
        android:endColor="#FFD788"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="250dp"
        android:height="60dp"
        />
    <stroke
        android:width="3dp"
        android:color="#D0C7D6"
        />
</shape>
        </item>
    <item android:state_pressed="true" >
        <shape>
                <corners
                    android:radius="20dp"
                    />
                <gradient
                    android:angle="270"
                    android:centerX="50%"
                    android:centerColor="#e19949"
                    android:startColor="#fdcc6b"
                    android:endColor="#e19949"
                    android:type="linear"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="250dp"
                    android:height="60dp"
                    />
                <stroke
                    android:width="3dp"
                    android:color="#D0C7D6"
                    />
                </shape>

    </item>
    </selector>